                        "url": {
                            "raw": "{{base_url}}/v1/guestbook/checkin/qr",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "v1",
                                "guestbook",
                                "checkin",
                                "qr"
                            ]
                        }
                    }
                },
                {
                    "name": "Search Guests",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/v1/guestbook/checkin/search?event_id={{event_id}}&query=John",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "v1",
                                "guestbook",
                                "checkin",
                                "search"
                            ],
                            "query": [
                                {
                                    "key": "event_id",
                                    "value": "{{event_id}}"
                                },
                                {
                                    "key": "query",
                                    "value": "John"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Get Check-in Stats",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{client_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/v1/guestbook/checkin/stats?event_id={{event_id}}",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "v1",
                                "guestbook",
                                "checkin",
                                "stats"
                            ],
                            "query": [
                                {
                                    "key": "event_id",
                                    "value": "{{event_id}}"
                                }
                            ]
                        }
                    }
                }
            ]
        },
