{
    "info": {
        "name": "KirimKata API",
        "description": "Complete API collection for KirimKata - Wedding Invitation & Guestbook Management",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "base_url",
            "value": "https://api.kirimkata.com",
            "type": "string"
        },
        {
            "key": "client_token",
            "value": "",
            "type": "string"
        },
        {
            "key": "admin_token",
            "value": "",
            "type": "string"
        },
        {
            "key": "event_id",
            "value": "",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "Health Check",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{base_url}}/health",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "health"
                    ]
                }
            }
        },
        {
            "name": "Authentication",
            "item": [
                {
                    "name": "Client Login",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 200) {",
                                    "    var jsonData = pm.response.json();",
                                    "    if (jsonData.token) {",
                                    "        pm.environment.set('client_token', jsonData.token);",
                                    "    }",
                                    "}"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"username\": \"your_username\",\n  \"password\": \"your_password\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/v1/auth/client/login",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "v1",
                                "auth",
                                "client",
                                "login"
                            ]
                        }
                    }
                },
                {
                    "name": "Client Verify Token",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{client_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/v1/auth/client/verify",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "v1",
                                "auth",
                                "client",
                                "verify"
                            ]
                        }
                    }
                },
                {
                    "name": "Admin Login",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 200) {",
                                    "    var jsonData = pm.response.json();",
                                    "    if (jsonData.token) {",
                                    "        pm.environment.set('admin_token', jsonData.token);",
                                    "    }",
                                    "}"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"username\": \"admin_username\",\n  \"password\": \"admin_password\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/v1/auth/admin/login",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "v1",
                                "auth",
                                "admin",
                                "login"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Client",
            "item": [
                {
                    "name": "Get Profile",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{client_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/v1/client/profile",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "v1",
                                "client",
                                "profile"
                            ]
                        }
                    }
                },
                {
                    "name": "Update Settings",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{client_token}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"newemail@example.com\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/v1/client/settings",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "v1",
                                "client",
                                "settings"
                            ]
                        }
                    }
                },
                {
                    "name": "Get Messages",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{client_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/v1/client/messages",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "v1",
                                "client",
                                "messages"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Guestbook - Events",
            "item": [
                {
                    "name": "List Events",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 200) {",
                                    "    var jsonData = pm.response.json();",
                                    "    if (jsonData.data && jsonData.data.length > 0) {",
                                    "        pm.environment.set('event_id', jsonData.data[0].id);",
                                    "    }",
                                    "}"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{client_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/v1/guestbook/events",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "v1",
                                "guestbook",
                                "events"
                            ]
                        }
                    }
                },
                {
                    "name": "Create Event",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{client_token}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"name\": \"Test Event\",\n  \"event_date\": \"2024-12-31\",\n  \"event_time\": \"10:00\",\n  \"location\": \"Test Venue\",\n  \"timezone\": \"Asia/Jakarta\",\n  \"has_invitation\": true,\n  \"has_guestbook\": true\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/v1/guestbook/events",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "v1",
                                "guestbook",
                                "events"
                            ]
                        }
                    }
                },
                {
                    "name": "Get Event Stats",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{client_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/v1/guestbook/events/{{event_id}}/stats",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "v1",
                                "guestbook",
                                "events",
                                "{{event_id}}",
                                "stats"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Guestbook - Guests",
            "item": [
                {
                    "name": "List Guests",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{client_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/v1/guestbook/guests?event_id={{event_id}}",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "v1",
                                "guestbook",
                                "guests"
                            ],
                            "query": [
                                {
                                    "key": "event_id",
                                    "value": "{{event_id}}"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Create Guest",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{client_token}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"event_id\": \"{{event_id}}\",\n  \"guest_name\": \"John Doe\",\n  \"guest_phone\": \"08123456789\",\n  \"max_companions\": 2\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/v1/guestbook/guests",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "v1",
                                "guestbook",
                                "guests"
                            ]
                        }
                    }
                },
                {
                    "name": "Export Guests CSV",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{client_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/v1/guestbook/guests/export?event_id={{event_id}}",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "v1",
                                "guestbook",
                                "guests",
                                "export"
                            ],
                            "query": [
                                {
                                    "key": "event_id",
                                    "value": "{{event_id}}"
                                }
                            ]
                        }
                    }
                }
            ]
        },
